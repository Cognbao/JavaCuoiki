<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.test.controller.ChatController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <children>
                <ListView fx:id="messageListView" VBox.vgrow="ALWAYS"/>
                <HBox spacing="10">
                    <children>
                        <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
                        <Button text="Send" fx:id="sendButton"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
